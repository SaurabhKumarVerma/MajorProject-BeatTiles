<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/account_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="trainedge.beattiles.SettingActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_setting">

    <Button
        android:id="@+id/accountbutton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="357dp"
        android:layout_height="73dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/custom_ripple_border"
        android:drawableLeft="@drawable/ic_account"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Account"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="26dp" />

    <Button
        android:id="@+id/feedbackbutton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="357dp"
        android:layout_height="73dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/custom_ripple_border"
        android:drawableLeft="@drawable/ic_feedback_black_24dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="FeedBack"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="113dp" />

    <Button
        android:id="@+id/gameoptinbtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="357dp"
        android:layout_height="73dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/custom_ripple_border"
        android:drawableLeft="@drawable/gameopt"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="    Game Option"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="201dp" />

    <Button
        android:id="@+id/aboutbtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="357dp"
        android:layout_height="78dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/custom_ripple_border"
        android:drawableLeft="@drawable/abouticon"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="About"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="284dp" />

    <Button
        android:id="@+id/sharebutton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="357dp"
        android:layout_height="77dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/custom_ripple_border"
        android:drawableLeft="@drawable/ic_share"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Share"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="376dp" />

</android.support.constraint.ConstraintLayout>
