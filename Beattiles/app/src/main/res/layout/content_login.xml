<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_disabled"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="trainedge.beattiles.LoginActivity"
    tools:showIn="@layout/activity_login">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/FacebookSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="200dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/ivGoogleSignIn"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="234dp"
        android:layout_height="29dp"
        android:background="@drawable/com_facebook_button_login_background"
        android:drawableLeft="@drawable/common_google_signin_btn_icon_dark_normal"
        android:text="Sign in with Google"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="269dp" />
</android.support.constraint.ConstraintLayout>
