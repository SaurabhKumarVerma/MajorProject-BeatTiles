<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="trainedge.beattiles.LoginActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp"
    tools:showIn="@layout/activity_login">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/FacebookSignIn"
        android:layout_width="246dp"
        android:layout_height="15dp"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="71dp"
        tools:layout_editor_absoluteY="396dp"
        tools:layout_editor_absoluteX="71dp" />

    <Button
        android:id="@+id/ivGoogleSignIn"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="247dp"
        android:layout_height="29dp"
        android:background="@drawable/com_facebook_button_like_background"
        android:drawableLeft="@drawable/common_google_signin_btn_icon_dark_normal"
        android:text="@string/sign_in_with_google"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="68dp"
        tools:layout_editor_absoluteY="318dp"
        tools:layout_editor_absoluteX="68dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="Please login into your Account"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="220dp"
        tools:layout_editor_absoluteX="25dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="357dp"
        tools:layout_editor_absoluteX="177dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="367dp"
        android:layout_height="95dp"
        app:srcCompat="@drawable/lognme"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="39dp" />
    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="259dp"
        tools:layout_editor_absoluteX="168dp" />


</android.support.constraint.ConstraintLayout>
